{
  "name": "@seonghyeonkimm/cas-prisma-template",
  "version": "0.0.1",
  "repository": "git@github.com:seonghyeonkimm/create-apollo-server.git",
  "author": "Seonghyeon Kim <impressor7@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "start": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "graphql-codegen --config codegen.yml -w",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "yarn run test --watch",
    "makemigration": "dotenv -e .env -- prisma migrate save --experimental",
    "migrate": "dotenv -e .env -- prisma migrate up --experimental && prisma generate",
    "studio": "dotenv -e .env -- prisma studio --experimental"
  },
  "dependencies": {
    "@prisma/client": "^2.4.1",
    "apollo-server": "^2.17.0",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.8",
    "@graphql-codegen/introspection": "1.17.8",
    "@graphql-codegen/typescript": "1.17.9",
    "@graphql-codegen/typescript-document-nodes": "1.17.8",
    "@graphql-codegen/typescript-resolvers": "1.17.9",
    "@prisma/cli": "^2.4.1",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.6.2",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "apollo-server-testing": "^2.17.0",
    "dotenv-cli": "^3.2.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-standard": "^4.0.1",
    "graphql-request": "^3.0.0",
    "jest": "^26.4.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix --ext .ts,.js",
      "yarn test"
    ]
  }
}
